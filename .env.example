# PaidYET API Configuration
PAIDYET_MERCHANT_ID=your_merchant_id_here
PAIDYET_API_KEY=your_api_key_here
PAIDYET_ENVIRONMENT=sandbox
# Options: 'production' or 'sandbox'

# Webhook Configuration
PAIDYET_WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development
# Options: 'development' or 'production'

# CORS Configuration
ALLOWED_ORIGINS=https://your-shopify-store.myshopify.com
# Comma-separated list of allowed origins

# Optional: Partner-level API Key Configuration
# Use this if you're managing multiple merchants
PAIDYET_MERCHANT_UUID=your_merchant_uuid_here

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com
